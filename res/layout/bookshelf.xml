<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bg"
    android:orientation="vertical">
    <RelativeLayout 
        android:id="@+id/top"
        android:layout_marginTop="80dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">"
        <ImageButton 
            android:id="@+id/list"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dip"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:scaleType="fitXY"
        	android:gravity="center"
        	android:background="#123456"
        	android:onClick="listClick"/>
        <ImageButton 
            android:id="@+id/btn_geren"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/list"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:scaleType="fitXY"
        	android:gravity="center"
        	android:background="#123456"
        	android:onClick="gerenClick"/>
        <ImageButton 
            android:id="@+id/btn_shuqian"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/btn_geren"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:scaleType="fitXY"
        	android:gravity="center"
        	android:onClick="shuqianClick"
        	android:background="#123456"/>
        <ImageButton 
            android:id="@+id/btn_banquan"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentRight="true"
        	android:layout_marginRight="30dip"
        	android:scaleType="fitXY"
        	android:gravity="center"
        	android:onClick="banquanClick"
        	android:background="#123456"/>
        <ImageButton 
            android:id="@+id/btn_qr"
            android:layout_marginRight="10dip"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:scaleType="fitXY"
        	android:gravity="center"
        	android:onClick="qrClick"
        	android:background="#123456"
        	android:layout_toLeftOf="@id/btn_banquan"/>
        <ImageButton 
            android:id="@+id/btn_fenxiang"
            android:layout_marginRight="10dip"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_toLeftOf="@id/btn_qr"
        	android:scaleType="fitXY"
        	android:gravity="center"
        	android:onClick="fenxiangClick"
        	android:background="#123456"/>
        <ImageButton 
            android:id="@+id/btn_dingyue"
            android:layout_marginRight="10dip"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:scaleType="fitXY"
        	android:gravity="center"
        	android:onClick="dingyueClick"
        	android:background="#123456"
        	android:layout_toLeftOf="@id/btn_fenxiang"/>
    </RelativeLayout>

    <FrameLayout 
        android:layout_below="@id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout 
            android:id="@+id/listLinearLayout"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:visibility="visible">
        	<RelativeLayout 
        	    android:id="@+id/curMagLayout"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentTop="true"
		        android:orientation="horizontal">
		        <ImageView 
		            android:id="@+id/cover"
		            android:layout_alignParentLeft="true"
		            android:layout_width="323dip"
		        	android:layout_height="392dip"
		        	android:scaleType="fitXY"/>
		        <LinearLayout 
		            android:id="@+id/rightLayout"
		            android:layout_alignParentRight="true"
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:orientation="vertical">"
		            <RelativeLayout 
		                android:id="@+id/title_layout"
		                android:layout_width="match_parent"
		        		android:layout_height="wrap_content">
		                <TextView 
		                    android:id="@+id/cur_title"
		                    android:textColor="#000000"
		                    android:textSize="20sp"
		                    android:layout_width="wrap_content"
		        			android:layout_height="wrap_content"/>
		                <Button 
		                    android:id="@+id/rightDownloadBtn"
		                    android:layout_alignParentRight="true" 
		                    android:layout_width="wrap_content"
		                    android:text="下载"
		                    android:background="@drawable/btn_bg"
		        			android:layout_height="wrap_content"/>
		                <Button 
		                    android:id="@+id/rightReadBtn"
		                    android:layout_alignParentRight="true" 
		                    android:layout_width="wrap_content"
		                    android:text="阅读"
		                    android:background="@drawable/btn_bg"
		                    android:visibility="gone"
		        			android:layout_height="wrap_content"/>
		                <ProgressBar 
					        android:id="@+id/rightProgress"
					        android:layout_alignParentRight="true" 
		                    android:layout_marginRight="30dip"
					        android:layout_width="200dip"
					        android:layout_height="20dip"
					        android:max="100"
					        android:visibility="gone"
					        style="?android:attr/progressBarStyleHorizontal"/>
		                <TextView 
		                    android:id="@+id/rightTextView"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_below="@id/rightProgress"
		                    android:layout_alignParentRight="true" 
		                    android:layout_marginRight="50dip"
		                    android:text=" 下载中..."
		                    android:visibility="gone"
		                    android:textColor="#000000"
		                    />
		            </RelativeLayout>
		        	<TextView 
		        	    android:id="@+id/cur_price"
		        	    android:textColor="#000000"
		                android:textSize="20sp"
		        	    android:layout_width="wrap_content"
		        		android:layout_height="wrap_content"/>
		        	<TextView 
		        	    android:id="@+id/description"
		        	    android:textColor="#000000"
		                android:textSize="20sp"
		        	    android:layout_width="match_parent"
		        		android:layout_height="wrap_content"/>
		        	<HorizontalScrollView 
		        	    android:id="@+id/preScroll"
		        	    android:layout_width="540dip"
		        	    android:layout_height="200dip">
		        	    <LinearLayout 
		        	        android:id="@+id/previews"
		        	        android:orientation="horizontal"
		        	        android:layout_width="wrap_content"
		        			android:layout_height="wrap_content">
		        	    </LinearLayout>
		        	</HorizontalScrollView>
		        </LinearLayout>
		    </RelativeLayout> 
    
		    <HorizontalScrollView 
		        android:id="@+id/bottomScroll"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:fadingEdge="none"
		        android:scrollbars="none"
		        android:layout_alignParentBottom="true">
		        <LinearLayout 
		            android:id="@+id/scroll_layout"
		            android:orientation="horizontal"
		            android:layout_gravity="bottom"
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content">
		        </LinearLayout>
		    </HorizontalScrollView>
        </RelativeLayout>
        <FrameLayout 
            android:id="@+id/gerenFrameLayout"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:visibility="invisible">
            <LinearLayout 
                android:id="@+id/imgLayout"
                android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:orientation="vertical">
                <ImageView 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"/>
                <ImageView 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"/>
                <ImageView 
                    android:layout_width="match_parent"
                    android:layout_height="203dip"
                    android:scaleType="fitXY"/>
                <ImageView 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"/>
                <ImageView 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"/>
                <ImageView 
                    android:layout_width="match_parent"
                    android:layout_height="203dip"
                    android:scaleType="fitXY"/>
            </LinearLayout>
        	<GridView 
			    android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:numColumns="4"
		    	android:drawSelectorOnTop="false"
		    	android:gravity="center"
		    	android:id="@+id/gerenGrid"
		    />
        </FrameLayout>
        <GridView 
			    android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:numColumns="4"
		    	android:layout_gravity="center_horizontal"
		    	android:drawSelectorOnTop="false"
		    	android:gravity="center"
		    	android:id="@+id/shuqianGrid"
		    	android:visibility="invisible"
		    />
        <ScrollView 
            android:id="@+id/banquanImg"
            android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:visibility="gone"
	    	android:layout_gravity="center_horizontal">
            <ImageView 
                android:id="@+id/copyright"
	            android:layout_width="1024dip"
		    	android:layout_height="768dip"
		    	android:layout_gravity="center_horizontal"
	    	/>
        </ScrollView>
    </FrameLayout>
</RelativeLayout>